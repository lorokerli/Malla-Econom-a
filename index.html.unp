    }
    .curso {
      background-color: white;
      padding: 0.4rem;
      margin: 0.3rem 0;
      border-radius: 5px;
      cursor: pointer;
      border: 1px solid #ccc;
      transition: 0.3s;
    }
    .curso:hover {
      background-color: #f2e9ff;
    }
    .aprobado {
      text-decoration: line-through;
      background-color: #d1ffd6;
      color: #333;
    }
    .mensaje-logro {
      color: #5b3c88;
      font-size: 0.9rem;
      text-align: center;
      margin-top: 0.5rem;
      display: none;
    }
  </style>
</head>
<body>
  <header>üëë Malla de la Princesa Antonia üëë</header>
  <div class="mensaje">¬°Felicidades Antonia, eres la mejor! ‚ú®</div>

  <div class="contenedor" id="malla">
    <!-- Los 10 ciclos -->
    <script>
      const cursosPorCiclo = {
        1: ['Introducci√≥n a la Odontolog√≠a', 'Matem√°tica y F√≠sica Aplicada', 'Biolog√≠a Celular', 'Anatom√≠a Humana', 'Estrategias para el Aprendizaje', 'Antropolog√≠a'],
        2: ['Promoci√≥n y Prevenci√≥n en Salud', 'Biolog√≠a Molecular y Gen√©tica', 'Bioqu√≠mica General', 'Anatom√≠a de Cabeza y Cuello', 'Histoembriolog√≠a'],
        3: ['Precl√≠nico y Rehabilitaci√≥n Oral I', 'Histolog√≠a Oral', 'Microbiolog√≠a General', 'Fisiolog√≠a Humana', 'Salud Poblacional', '√âtica'],
        4: ['Precl√≠nico y Materiales Dentales', 'Simulaci√≥n Cl√≠nica Integral I', 'Patolog√≠a Oral', 'Farmacolog√≠a', 'Radiolog√≠a Oral'],
        5: ['Precl√≠nico y Rehabilitaci√≥n Oral I', 'Simulaci√≥n Cl√≠nica Integral II', 'Inicio a la Cl√≠nica Integral I', 'Patolog√≠a Diagn√≥stica I', 'Periodoncia Oral I'],
        6: ['Precl√≠nico y Rehabilitaci√≥n Oral II', 'Simulaci√≥n Cl√≠nica Integral III', 'Inicio a la Cl√≠nica Integral II', 'Imagenolog√≠a Diagn√≥stica II'],
        7: ['Endodoncia I', 'Odontopediatr√≠a I', 'Cl√≠nica Integral I', 'Periodoncia Oral II', 'Diagn√≥stico Integral'],
        8: ['Cirug√≠a Bucal I', 'Odontopediatr√≠a II', 'Cl√≠nica Integral II', 'Ortodoncia I', 'Rehabilitaci√≥n Oral Avanzada'],
        9: ['Cl√≠nica Integral III', 'Odontolog√≠a Preventiva', 'Cirug√≠a Bucal II', 'Investigaci√≥n Aplicada I', 'Electivo I'],
        10: ['Cl√≠nica Integral IV', 'Odontolog√≠a Legal', 'Administraci√≥n en Salud', 'Investigaci√≥n Aplicada II', 'Electivo II']
      };

      const malla = document.getElementById("malla");

      for (let i = 1; i <= 10; i++) {
        const semestre = document.createElement("div");
        semestre.className = "semestre";
        const titulo = document.createElement("h2");
        titulo.textContent = `Semestre ${i}`;
        semestre.appendChild(titulo);

        cursosPorCiclo[i].forEach(curso => {
          const divCurso = document.createElement("div");
          divCurso.className = "curso";
          divCurso.textContent = curso;
          divCurso.onclick = () => {
            divCurso.classList.toggle("aprobado");
            verificarCiclo(semestre, i);
          };
          semestre.appendChild(divCurso);
        });

        const mensajeLogro = document.createElement("div");
        mensajeLogro.className = "mensaje-logro";
        mensajeLogro.textContent = `¬°Completaste todo el ciclo ${i}! üåü`;
        semestre.appendChild(mensajeLogro);

        malla.appendChild(semestre);
      }

      function verificarCiclo(contenedor, numero) {
        const cursos = contenedor.querySelectorAll(".curso");
        const mensaje = contenedor.querySelector(".mensaje-logro");
        const todosAprobados = Array.from(cursos).every(el => el.classList.contains("aprobado"));
        mensaje.style.display = todosAprobados ? "block" : "none";
      }
    </script>
  </div>
</body>
</html>
